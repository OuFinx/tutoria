---
// Utterances Comments Component
---

<>
  <hr style="border: none; border-top: 1px dashed rgb(var(--gray));" />
  <div class="comments-section">
    <h3 class="comments-title">
      Comments
    </h3>
    
    <div class="comments-content">
      <script src="https://utteranc.es/client.js"
          repo="OuFinx/tutoria"
          issue-term="title"
          theme="github-light"
          crossorigin="anonymous"
          async>
      </script>
    </div>
  </div>
</>

<style>
  .comments-section {
    width: 720px;
    margin: 0 auto;
    background: rgb(var(--gray-light));
    border-radius: 8px;
    border: 1px solid rgb(var(--gray-light));
  }
  
  .comments-title {
    margin: 0 0 1rem 0;
    font-size: 1.1rem;
    font-weight: 600;
    color: rgb(var(--gray-dark));
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
  }
  
  .comments-content {
    min-height: 200px;
  }
  
  /* Responsive design */
  @media (max-width: 768px) {
    .comments-section {
      width: 100%;
      margin-left: -1em;
      margin-right: -1em;
      border-radius: 0;
      padding-left: 1em;
    }
  }
  
  /* Dark mode support */
  @media (prefers-color-scheme: dark) {
    .comments-section {
      background: rgba(255, 255, 255, 0.05);
      border-color: rgba(255, 255, 255, 0.1);
    }
  }
</style>
