---
// Utterances Comments Component
---

<>
  <hr class="comments-separator" />
  <div class="comments-section">
    <h3 class="comments-title">
      Comments
    </h3>
    
    <div class="comments-content">
      <script src="https://utteranc.es/client.js"
          repo="OuFinx/tutoria"
          issue-term="url"
          theme="github-light"
          crossorigin="anonymous"
          async>
      </script>
    </div>
  </div>
</>

<style>
  .comments-separator {
    border: none;
    border-top: 1px dashed rgb(var(--gray));
    width: 720px;
    max-width: calc(100% - 2em);
    margin: 1rem auto;
  }

  .comments-section {
    width: 720px;
    max-width: calc(100% - 2em);
    margin: 0 auto;
    padding: 0 1.5rem;
    background: rgb(var(--gray-light));
    border-radius: 8px;
    border: 1px solid rgb(var(--gray-light));
  }
  
  .comments-title {
    margin: 0 0 1rem 0;
    font-size: 1.1rem;
    font-weight: 600;
    color: rgb(var(--gray-dark));
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
  }
  
  .comments-content {
    min-height: 200px;
  }
  
  /* Responsive design */
  @media (max-width: 768px) {
    .comments-section {
      margin-left: -1em;
      margin-right: -1em;
      border-radius: 0;
      padding: 1rem;
    }
  }
  
  /* Dark mode support */
  @media (prefers-color-scheme: dark) {
    .comments-section {
      background: rgba(255, 255, 255, 0.05);
      border-color: rgba(255, 255, 255, 0.1);
    }
  }
</style>
